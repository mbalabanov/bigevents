                        <label>Month</label> {{ form_widget(form.datetime.date.month, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="col-md-4">
                            <label>Year</label> {{ form_widget(form.datetime.date.year, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="row">
                        <div class="col-md-6">
                            <label>Hours</label> {{ form_widget(form.datetime.time.hour, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="col-md-6">
                            <label>Minutes</label> {{ form_widget(form.datetime.time.minute, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                    <small>{{ form_help(form.datetime) }}</small>
                    <div class="form-error">
                        {{ form_errors(form.datetime) }}
                    </div>
                </div>
            </div>
        </div>
    </div>

